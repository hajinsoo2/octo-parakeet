{
 "properties": {
  "displayName": "Activity log should be retained for at least one year",
  "policyType": "Custom",
  "mode": "All",
  "description": "",
  "metadata": {
   "category": "Monitoring",
   "version": "1.0.0",
   "createdBy": "556059f6-b4a1-4de0-977c-6783c80d9bbc",
   "createdOn": "2022-07-13T07:23:32.8919671Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {
   "effect": {
    "type": "String",
    "metadata": {
     "displayName": "Effect",
     "description": "Enable or disable the execution of the policy"
    },
    "allowedValues": [
     "Audit",
     "Deny",
     "Disabled",
     "AuditIfNotExists"
    ],
    "defaultValue": "AuditIfNotExists"
   }
  },
  "policyRule": {
   "if": {
    "equals": "Microsoft.Resources/subscriptions",
    "field": "type"
   },
   "then": {
    "details": {
     "existenceCondition": {
      "anyOf": [
       {
        "allOf": [
         {
          "equals": "true",
          "field": "Microsoft.Insights/logProfiles/retentionPolicy.enabled"
         },
         {
          "equals": "365",
          "field": "Microsoft.Insights/logProfiles/retentionPolicy.days"
         }
        ]
       },
       {
        "allOf": [
         {
          "equals": "false",
          "field": "Microsoft.Insights/logProfiles/retentionPolicy.enabled"
         },
         {
          "equals": "0",
          "field": "Microsoft.Insights/logProfiles/retentionPolicy.days"
         }
        ]
       }
      ]
     },
     "type": "Microsoft.Insights/logProfiles"
    },
    "effect": "[parameters('effect')]"
   }
  }
 },
 "id": "/subscriptions/3c73b814-e783-495f-a574-0d73afe52a08/providers/Microsoft.Authorization/policyDefinitions/5e856359-7127-422e-87a0-d555ffd271a0",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "5e856359-7127-422e-87a0-d555ffd271a0"
}